{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "league/tactician-bundle": "^1.1",
        "sendgrid/sendgrid": "^7.3",
        "sensio/framework-extra-bundle": "^5.3",
        "sentry/sdk": "^2.0",
        "sentry/sentry-symfony": "^3.0",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/twig-bundle": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "4.3.*",
        "symfony/test-pack": "^1.0",
        "symfony/var-dumper": "4.3.*",
        "symfony/web-server-bundle": "4.3.*",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.4",
        "phpstan/phpstan": "^0.11.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application/",
            "Domain\\": "src/Domain/",
            "Infrastructure\\": "src/Infrastructure/",
            "Symfony\\": "src/Symfony/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Domain\\": "test/Domain/",
            "Infrastructure\\": "test/Infrastructure/",
            "Application\\": "test/Application/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpunit": "./vendor/bin/simple-phpunit test --colors=always",
        "phpstan": "vendor/bin/phpstan analyse src -n -l 5",
        "phpcs": "vendor/bin/phpcs src -sp --standard=phpcs.xml"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
